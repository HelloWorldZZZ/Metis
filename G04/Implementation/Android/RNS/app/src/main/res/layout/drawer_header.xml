<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@mipmap/drawer_header_bg"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <com.metis.rns.utils.RoundImageView
            android:id="@+id/drawer_header_person_img"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="18dp"
            android:background="@mipmap/professor" />

        <Button
            android:id="@+id/user_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/drawer_header_person_img"
            android:background="#00ffffff"
            android:paddingLeft="18dp"
            android:paddingTop="15dp"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/user_info_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/drawer_header_person_img"
            android:layout_below="@id/drawer_header_person_img"
            android:paddingLeft="18dp"
            android:paddingTop="15dp"
            android:textColor="#ffffff"
            android:visibility="gone"
            android:singleLine="true"
            android:ellipsize="end" />
    </LinearLayout>
</RelativeLayout>